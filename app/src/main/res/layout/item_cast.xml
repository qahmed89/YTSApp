<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/item_cast_iv_pic"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:padding="4dp"
      android:src="@drawable/ic_actor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:id="@+id/item_cast_tv_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:gravity="center"
      android:textColor="@android:color/white"
      app:layout_constraintEnd_toEndOf="@+id/item_cast_iv_pic"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintStart_toStartOf="@+id/item_cast_iv_pic"
      app:layout_constraintTop_toBottomOf="@+id/item_cast_iv_pic"/>

</android.support.constraint.ConstraintLayout>